{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "strict": true,

    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}
